<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/image_kajian_menu_sejarah"
        android:layout_width="112dp"
        android:layout_height="79dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/gusmuwafiq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_title_desc"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/image_kajian_menu_sejarah"
        app:layout_constraintTop_toTopOf="@id/image_kajian_menu_sejarah">

        <TextView
            android:id="@+id/txt_title_kajian_menu_sejarah"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:text="@string/txt_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_description_kajian_menu_sejarah"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="@string/txt_channel"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_action_more_kajian_menu_sejarah"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="@id/linear_title_desc"
        app:layout_constraintStart_toEndOf="@id/linear_title_desc"
        app:layout_constraintTop_toTopOf="@id/linear_title_desc"
        app:tint="@color/gray" />

</androidx.constraintlayout.widget.ConstraintLayout>