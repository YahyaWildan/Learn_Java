<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeFragment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">4dp</item>
        <item name="tabPaddingEnd">4dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="tabBackground">@drawable/button_tabs</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SpinnerTheme">
        <item name="background">@drawable/rounded_gray</item>
    </style>

    <style name="btnSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/BottomColor</item>
        <item name="colorSwitchThumbNormal">@color/black
        </item>

        <item name="android:colorForeground">@color/black
        </item>
    </style>

    <style name="tabLayoutCategory" parent="Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/light_gray</item>

    </style>
</resources>