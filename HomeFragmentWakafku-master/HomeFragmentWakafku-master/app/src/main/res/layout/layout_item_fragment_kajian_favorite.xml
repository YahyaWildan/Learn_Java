<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_fragment_kajian_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/kajian" />

        <TextView
            android:id="@+id/txt_title_fragment_kajian_favorite"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:text="@string/txt_title_fragment_kajian_new"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_description_fragment_kajian_favorite"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:text="@string/txt_channel"
            android:textColor="@color/gray"
            android:textSize="12sp"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>